<style>
  .supplements-collections {
    background: #000;
    color: #fff;
    padding: 4rem 2rem;
  }

  .supplements-collections-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .supplements-collections-header h2 {
    color: #fff;
  }

  .supplements-collections-link {
    color: #fff;
    text-decoration: underline;
    font-weight: 600;
    font-size: 1rem;
    font-family: 'SAASERIESFDOT';
    font-weight: 400;
    font-size: 24px;
    text-align: center;
    text-decoration: underline;
  }

  .supplements-collection-card {
    background: #111;
    padding: 1rem;
    border-radius: 8px;
    text-align: center;
    text-decoration: none;
    color: #fff;
    transition: transform 0.3s ease;
  }

  .supplements-collection-card img {
    width: 100%;
    margin-bottom: 0.5rem;
  }

  .supplements-collection-card:hover {
    transform: scale(1.03);
  }

  .supplements-collection-card h3 {
    font-size: 1.2rem;
    margin: 0.5rem 0 0;
  }
</style>

<section class="supplements-collections {% if section.settings.enable_boxed_section %}boxed-section{% endif %}">
  <div class="supplements-collections-header">
    <h2 class="section-title">{{ section.settings.section_title }}</h2>
    <a href="{{ section.settings.shop_all_link }}" class="collections-link">{{ section.settings.all_product_btn }}</a>
  </div>
  <div class="supplements-collections-grid">
    {% assign title_colors = '#3384FF,#EFB605,#EB7618,#F53891' | split: ',' %}

    {% for collection in collections %}
      {% if collection.handle != 'all' %}
        {% assign color_index = forloop.index0 | modulo: title_colors.size %}
        {% assign current_color = title_colors[color_index] %}

        <a href="{{ collection.url }}" class="supplements-collection-card">
          {% capture img_html %}
            {% if collection.image %}
              <img
                src="{{ collection.image | img_url: 'master' }}"
                alt="{{ collection.title | escape }}"
                loading="lazy"
              >
            {% else %}
              {% assign first_product = collection.products | first %}
              {% if first_product and first_product.featured_image %}
                <img
                  src="{{ first_product.featured_image | img_url: 'master' }}"
                  alt="{{ first_product.title | escape }}"
                  loading="lazy"
                >
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'supplements-collection-placeholder' }}
              {% endif %}
            {% endif %}
          {% endcapture %}

          <div class="supplements-collection-image">
            {{ img_html }}
          </div>
          <h3 style="color: {{ current_color }}">{{ collection.title }}</h3>
        </a>
      {% endif %}
    {% endfor %}
  </div>
  <style>
    .supplements-collections-grid {
        display: grid;
        grid-template-columns: repeat({{ section.settings.product_column }}, 1fr);
        gap: 2rem;
    }
    .Supplements-collection-image{
      display: grid;
      place-items: center;
      aspect-ratio: {{ section.settings.image_ratio }};
      overflow: hidden;
    }
    .supplements-collection-image img{
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
  </style>
</section>

<!-- Section: Supplements Collections -->
{% schema %}
{
  "name": "Supplements Collections",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_boxed_section",
      "label": "Enable Boxed Section",
      "default": true
    },
    {
      "type": "range",
      "id": "product_column",
      "min": 1,
      "max": 12,
      "step": 1,
      "label": "Select Product Column",
      "default": 4
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Shop by Health Goals"
    },
    {
      "type": "url",
      "id": "shop_all_link",
      "label": "Shop All Link",
      "default": "/collections"
    },
    {
      "type": "text",
      "id": "all_product_btn",
      "label": "Write All product button text",
      "default": "SHOP ALL HEALTH GOALS"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Select Title Color",
      "default": "#fff"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image ratio",
      "default": "1 / 1",
      "options": [
        { "value": "1 / 1", "label": "Square" },
        { "value": "4 / 5", "label": "Portrait" },
        { "value": "4 / 3", "label": "Landscape" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Supplements Collections",
      "category": "Collection"
    }
  ]
}
{% endschema %}
