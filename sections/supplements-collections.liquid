<style>
  @media screen and (min-width: 992px) {
    .supplements-collections {
      padding: 80px 86px;
    }
  }
  @media screen and (max-width: 991px) {
    .supplements-collections {
      padding: 40px 0;
    }
  }

  .supplements-collections {
    background: #000;
    color: #fff;
  }

  .supplements-collections-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 46px;
  }

  @media screen and (max-width: 991px) {
    .supplements-collections-header {
      justify-content: center;
    }
  }

  .supplements-collections-header h2 {
    color: #fff;
  }

  .supplements-collections-link {
    color: #fff;
    font-family: "SaaSeriesEDOT";
    font-size: 24px;
    font-weight: 400;
    text-align: center;
    text-decoration: underline;
    transition: all .5s;
    display: none;
  }

  @media screen and (min-width: 992px) {
    .supplements-collections-link.destop {
      display: block;
    }
    .supplements-collections-link.mobile {
      display: none;
    }
  }

  .supplements-collections-link.mobile {
      display: block;
      font-size: 16px;
    }

  .supplements-collections-link:hover {
    color: #e86452;
  }

  .supplements-collections-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.product_column }}, 1fr);
    gap: 24px;
  }

  .supplements-collection-card {
    text-decoration: none;
  }

  .supplements-collection-image {
    background: linear-gradient(180deg, #39332E 0%, #000000 100%);
    border-radius: 24px;
    padding: 36px 0;
    width: 100%;
    display: inline-block;
    margin-bottom: 0.5rem;
  }
  .supplements-collection-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .supplements-collection-card h3 {
    font-family: "SaaSeriesEDOT";
    font-weight: 400;
    font-size: 26px;
    margin: 22px 0 0;
  }
</style>

<section class="supplements-collections {% if section.settings.enable_boxed_section %}boxed-section{% endif %}">
  <div class="supplements-collections-header">
    <h2 class="section-title">{{ section.settings.section_title }}</h2>
    <a href="{{ section.settings.shop_all_link }}" class="supplements-collections-link desktop">
      {{- section.settings.all_product_btn -}}
    </a>
  </div>

  <div class="supplements-collections-grid">
    {% for block in section.blocks %}
      {% assign collection = collections[block.settings.collection] %}
      {% if collection %}
        <a href="{{ collection.url }}" class="supplements-collection-card">
          <div class="supplements-collection-image">
            {% if block.settings.collection_img %}
              <img
                src="{{ block.settings.collection_img | img_url: 'master' }}"
                alt="{{ collection.title | escape }}"
                loading="lazy"
              >
            {% elsif collection.image %}
              <img
                src="{{ collection.image | img_url: 'master' }}"
                alt="{{ collection.title | escape }}"
                loading="lazy"
              >
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'supplements-collection-placeholder' }}
            {% endif %}
          </div>
          <h3 style="color: {{ block.settings.title_color }}">{{ collection.title }}</h3>
        </a>
      {% endif %}
    {% endfor %}
  </div>
  <a href="{{ section.settings.shop_all_link }}" class="supplements-collections-link mobile">
    {{- section.settings.all_product_btn -}}
  </a>
</section>

{% schema %}
{
  "name": "Supplements Collections",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_boxed_section",
      "label": "Enable Boxed Section",
      "default": true
    },
    {
      "type": "range",
      "id": "product_column",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Columns",
      "default": 4
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Shop by Health Goals"
    },
    {
      "type": "url",
      "id": "shop_all_link",
      "label": "Shop All Link",
      "default": "/collections"
    },
    {
      "type": "text",
      "id": "all_product_btn",
      "label": "All product button text",
      "default": "SHOP ALL HEALTH GOALS"
    }
  ],
  "blocks": [
    {
      "type": "collection_block",
      "name": "Collection Card",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Choose Collection"
        },
        {
          "type": "image_picker",
          "id": "collection_img",
          "label": "Custom Image (optional)"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Title Color",
          "default": "#F53891"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Supplements Collections",
      "category": "Collection"
    }
  ]
}
{% endschema %}
