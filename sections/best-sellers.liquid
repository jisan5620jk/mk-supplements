<style>
  .best-sellers__wrapper {
    padding: 82px 2rem 0;
    background: #000000;
    text-align: center;
    position: relative;
  }

  @media screen and (max-width: 1023px) {
    .best-sellers__wrapper {
      padding: 62px 0 48px;
    }
  }

  .best-sellers__wrapper:before {
    position: absolute;
    content: '';
    left: 0;
    bottom: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, #000000 100%);
    width: 100%;
    height: 143px;
  }

  .best-sellers__text h2 {
    color: #D0AC52;
    text-align: center;
    font-size: 48px;
    line-height: 60px;
  }

  .best-sellers__description {
    font-family: 'Rubik';
    font-weight: 300;
    font-size: 18px;
    line-height: 25px;
    text-align: center;
    color: #ffffff;
    max-width: 756px;
    padding: 0 2rem;
    margin: 16px auto 24px;
  }

  @media screen and (max-width: 1023px) {
    .best-sellers__wrapper {
      padding: 62px 2rem 0;
    }
  }
  @media screen and (max-width: 575px) {
    .best-sellers__description {
      max-width: 302px;
    }
  }

  .best-sellers__button {
    background: #E16456;
    color: #ffffff;
    width: 100%;
    max-width: 300px;
  }

  .best-sellers__image.desktop {
    max-width: 1078px;
    width: 100%;
    margin: 34px auto -10px;
  }
  @media screen and (min-width: 1024px) {
    .best-sellers__image.mobile {
      display: none;
    }
  }
  @media screen and (max-width: 1023px) {
    .best-sellers__image.desktop {
      display: none;
    }
  }
  .best-sellers__image.mobile {
    width: 100%;
    margin: 45px auto 0;
  }
  .best-sellers__image.mobile img {
    width: 100%;
  }
</style>

<div class="best-sellers__wrapper {% if section.settings.enable_boxed_section %}boxed-section{% endif %}">
  <div class="best-sellers__text">
    <h2 class="section-title">{{ section.settings.heading }}</h2>
    <div class="best-sellers__description">{{ section.settings.description }}</div>
    <a href="{{ section.settings.button_link }}" class="primary-button best-sellers__button">
      {{- section.settings.button_label -}}
    </a>
  </div>

  <div class="best-sellers__image desktop">
    <img
      src="{{ section.settings.best_seller_image | img_url: 'master' }}"
      alt="{{ section.settings.best_seller_image.alt | escape }}"
    >
  </div>
  <div class="best-sellers__image mobile">
    <img
      src="{{ section.settings.best_seller_image_mobile | img_url: 'master' }}"
      alt="{{ section.settings.best_seller_image_mobile.alt | escape }}"
    >
  </div>
</div>

{% schema %}
{
  "name": "Best Sellers",
  "tag": "section",
  "class": "best-sellers",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_boxed_section",
      "label": "Enable Boxed Section",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Shop Best Sellers"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Section Description",
      "default": "<p>Our animal-based supplements provide highly-bioavailable vitamins, minerals, coenzymes, and peptides for optimal health and vitality.</p>"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "best_seller_image",
      "label": "Best Seller Image Desktop"
    },
    {
      "type": "image_picker",
      "id": "best_seller_image_mobile",
      "label": "Best Seller Image Mobile"
    }
  ],
  "presets": [
    {
      "name": "Best Sellers",
      "category": "Custom"
    }
  ]
}
{% endschema %}
