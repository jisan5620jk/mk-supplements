<style>
  .best-sellers__wrapper {
    padding: 4rem 2rem;
    background:#000000;
    text-align: center;
  }

  .best-sellers__text h2 {
    color: #E16456;
  }

  .best-sellers__description {
    font-family: 'Rubik';
    font-weight: 400;
    font-size: 18px;
    line-height: 25px;
    text-align: center;
    color: #ffffff;
    max-width: 750px;
  }

  .best-sellers__button {
    background: #E16456;
    color: #ffffff;
  }

  .best-sellers__image {
    max-width: 1078px;
    width: 100%;
    margin: 0 auto;
  }
</style>

<div class="best-sellers__wrapper {% if section.settings.enable_boxed_section %}boxed-section{% endif %}">
  <div class="best-sellers__text">
    <h2 class="section-title">{{ section.settings.heading }}</h2>
    <div class="best-sellers__description">{{ section.settings.description }}</div>
    <a href="{{ section.settings.button_link }}" class="primary-button best-sellers__button">
      {{- section.settings.button_label -}}
    </a>
  </div>

  <div class="best-sellers__image">
    <img src="{{ section.settings.best_seller_image | img_url: 'master' }}">
  </div>
</div>

{% schema %}
{
  "name": "Best Sellers",
  "tag": "section",
  "class": "best-sellers",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_boxed_section",
      "label": "Enable Boxed Section",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Shop Best Sellers"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Section Description",
      "default": "<p>Our animal-based supplements provide highly-bioavailable vitamins, minerals, coenzymes, and peptides for optimal health and vitality.</p>"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "best_seller_image",
      "label": "Best Seller Image"
    }
  ],
  "presets": [
    {
      "name": "Best Sellers",
      "category": "Custom"
    }
  ]
}
{% endschema %}
