<style>
  .unique-supplements {
    text-align: center;
    background: #4c2b1d;
  }

  .unique-supplements .section-title {
    color: #ffffff;
    padding: 56px 0 48px;
    text-align: center;
  }

  .unique-supplements .video-wrapper {
    position: relative;
    width: 100%;
    margin: auto;
    aspect-ratio: 16 / 9;
    background-color: #000;
    overflow: hidden;
  }

  .unique-supplements .video-poster {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    cursor: pointer;
  }

  .unique-supplements video {
    width: 100%;
    height: 100%;
    display: none;
  }

  .unique-feature-mobile {
    white-space: nowrap;
    width: 100%;
  }

  .unique-feature-desktop {
    width: 100%;
    padding: 20px 120px;
  }

  .unique-supplements-feature {
    display: flex;
    justify-content: space-between;
    width: 100%;
  }

  @media screen and (min-width: 1024px) {
    .unique-feature-mobile {
        display: none;
    }
  }

  @media screen and (max-width: 1023px) {
    .unique-feature-desktop {
        display: none;
    }
    .unique-supplements-feature {
        display: inline-flex;
        animation: marquee var(--marquee-speed, 40s) linear infinite;
    }
  }

  .unique-supplements-feature-card {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    justify-content: center;
    white-space: normal;
  }

  .unique-supplements-feature-card-icon img {
    max-width: 45px;
  }

  .unique-supplements-feature-card-content h4 {
    display: inline-block;
    font-family: "SaaSeriesEDOT";
    font-weight: 400;
    font-size: 16px;
    color:#ffffff;
    margin: 0;
  }

  /* Marquee Animation */
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
  }
</style>

{%- liquid
  assign section_id = section.id
-%}

<section
  id="supplements-{{ section_id }}"
  class="unique-supplements {% if section.settings.enable_boxed_section %}boxed-section{% endif %}"
>
  {% if section.settings.section_title %}
    <h2 class="section-title">{{ section.settings.section_title }}</h2>
  {% endif %}

  <div class="video-wrapper">
    {% if section.settings.poster_image %}
      <img
        src="{{ section.settings.poster_image | image_url: width: 1600 }}"
        alt="Video Poster"
        class="video-poster"
        id="videoPoster-{{ section.id }}"
      >
    {% endif %}

    {% if section.settings.video_file != blank %}
      <video id="video-{{ section.id }}" controls playsinline preload="auto">
        {% for source in section.settings.video_file.sources %}
          <source src="{{ source.url | asset_url }}" type="{{ source.mime_type }}">
        {% endfor %}
        Your browser does not support the video tag.
      </video>

    {% elsif section.settings.video_url != blank %}
      <video id="video-{{ section.id }}" controls>
        <source src="{{ section.settings.video_url | asset_url}}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {% endif %}
  </div>

  <div class="unique-feature-mobile">
    {% for row in (1..3) %}
      <div class="unique-supplements-feature" style="--marquee-speed: {{ section.settings.marquee_speed }}s;">
        {% for block in section.blocks %}
          <div class="unique-supplements-feature-card">
            <div class="unique-supplements-feature-card-icon">
              {% if block.settings.icon %}
                <img src="{{ block.settings.icon | img_url: 'master' }}" alt="{{ block.settings.label }}">
              {% endif %}
            </div>
            <div class="unique-supplements-feature-card-content">
              <h4>{{ block.settings.label }}</h4>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endfor %}
  </div>
  <div class="unique-feature-desktop">
    <div class="unique-supplements-feature">
      {% for block in section.blocks %}
        <div class="unique-supplements-feature-card">
          <div class="unique-supplements-feature-card-icon">
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | img_url: 'master' }}" alt="{{ block.settings.label }}">
            {% endif %}
          </div>
          <div class="unique-supplements-feature-card-content">
            <h4>{{ block.settings.label }}</h4>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const id = '{{ section.id }}';
    const poster = document.getElementById('videoPoster-' + id);
    const video = document.getElementById('video-' + id);

    function playVideo() {
      if (poster) poster.style.display = 'none';
      if (video) {
        video.style.display = 'block';
        video.load(); // ⬅️ ensure source reloads
        video.play();
      }
    }

    if (poster) poster.addEventListener('click', playVideo);
  });
</script>

{% schema %}
{
  "name": "Unique Supplements",
  "tag": "section",
  "class": "unique-supplements-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_boxed_section",
      "label": "Enable Boxed Section",
      "default": true
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Unlock Peak Health"
    },
    {
      "type": "image_picker",
      "id": "poster_image",
      "label": "Video Poster"
    },
    {
      "type": "video",
      "id": "video_file",
      "label": "Upload Video"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL (optional)"
    },
    {
      "type": "range",
      "id": "marquee_speed",
      "label": "Marquee Speed (seconds)",
      "min": 5,
      "max": 100,
      "step": 1,
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Feature Icon"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Feature Label",
          "default": "Feature Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Unique Supplements",
      "category": "Custom",
      "blocks": [
        { "type": "feature", "settings": { "label": "FAMILY OWNED" } },
        { "type": "feature", "settings": { "label": "SMALL BATCH" } },
        { "type": "feature", "settings": { "label": "NON-GMO" } },
        { "type": "feature", "settings": { "label": "FREE FROM TOXINS & MICROPLASTICS" } }
      ]
    }
  ]
}
{% endschema %}
