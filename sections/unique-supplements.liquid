<style>
  .unique-supplements {
    text-align: center;
    background: #4c2b1d;
  }

  .unique-supplements .section-title {
    color: #ffffff;
    padding: 56px 0 48px;
  }

  .unique-supplements .video-wrapper {
    position: relative;
    width: 100%;
    margin: auto;
    aspect-ratio: 16 / 9;
    background-color: #000;
    overflow: hidden;
  }

  .unique-supplements .video-poster {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    cursor: pointer;
  }

  .unique-supplements .play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 64px;
    height: 64px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .unique-supplements .play-button:hover {
    background: rgba(255, 255, 255, 1);
  }

  .unique-supplements .play-button::before {
    content: '';
    display: block;
    width: 0;
    height: 0;
    border-left: 20px solid #000;
    border-top: 12px solid transparent;
    border-bottom: 12px solid transparent;
  }

  .unique-supplements video {
    width: 100%;
    height: 100%;
    display: none;
    border-radius: 12px;
  }

  .unique-supplements-feature {
    padding: 20px 120px;
    display: flex;
    justify-content: space-between;
  }

  @media screen and (max-width: 1023px) {
    .unique-supplements-feature {
        display: inline-flex;
        animation: marquee var(--marquee-speed, 40s) linear infinite;
    }
  }

  .unique-supplements-feature-card {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    justify-content: center;
    white-space: normal;
  }

  .unique-supplements-feature-card-icon img {
    max-width: 45px;
  }

  .unique-supplements-feature-card-content h4 {
    font-family: 'SAASERIESFDOT';
    font-weight: 400;
    font-size: 18px;
    font-size: 16px;
    color:#ffffff;
    margin: 0;
  }

  /* Marquee Animation */
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
  }
</style>

{%- liquid
  assign section_id = section.id
-%}

<section
  id="supplements-{{ section_id }}"
  class="unique-supplements {% if section.settings.enable_boxed_section %}boxed-section{% endif %}"
>
  {% if section.settings.section_title %}
    <h2 class="section-title">{{ section.settings.section_title }}</h2>
  {% endif %}

  <div class="video-wrapper">
    {% if section.settings.poster_image %}
      <img
        src="{{ section.settings.poster_image | image_url: width: 1600 }}"
        alt="Video Poster"
        class="video-poster"
        id="videoPoster-{{ section.id }}"
      >
    {% endif %}

    <div class="play-button" id="playButton-{{ section.id }}"></div>

    {% if section.settings.video_url %}
      <video id="video-{{ section.id }}" controls>
        <source src="{{ section.settings.video_url }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {% endif %}
  </div>

  <div class="unique-supplements-feature" style="--marquee-speed: {{ section.settings.marquee_speed }}s;">
    {% for block in section.blocks %}
      <div class="unique-supplements-feature-card">
        <div class="unique-supplements-feature-card-icon">
          {% if block.settings.icon %}
            <img src="{{ block.settings.icon | img_url: 'master' }}" alt="{{ block.settings.label }}">
          {% endif %}
        </div>
        <div class="unique-supplements-feature-card-content">
          <h4>{{ block.settings.label }}</h4>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const id = '{{ section.id }}';
    const poster = document.getElementById('videoPoster-' + id);
    const playBtn = document.getElementById('playButton-' + id);
    const video = document.getElementById('video-' + id);

    function playVideo() {
      if (poster) poster.style.display = 'none';
      if (playBtn) playBtn.style.display = 'none';
      if (video) {
        video.style.display = 'block';
        video.play();
      }
    }

    if (poster) poster.addEventListener('click', playVideo);
    if (playBtn) playBtn.addEventListener('click', playVideo);
  });
</script>
{% schema %}
{
  "name": "Unique Supplements Video",
  "tag": "section",
  "class": "unique-supplements-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_boxed_section",
      "label": "Enable Boxed Section",
      "default": true
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Unlock Peak Health"
    },
    {
      "type": "image_picker",
      "id": "poster_image",
      "label": "Video Poster"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Feature Icon"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Feature Label",
          "default": "Feature Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Unique Supplements Video",
      "category": "Custom",
      "blocks": [
        { "type": "feature", "settings": { "label": "FAMILY OWNED" } },
        { "type": "feature", "settings": { "label": "SMALL BATCH" } },
        { "type": "feature", "settings": { "label": "NON-GMO" } },
        { "type": "feature", "settings": { "label": "FREE FROM TOXINS & MICROPLASTICS" } }
      ]
    }
  ]
}
{% endschema %}
