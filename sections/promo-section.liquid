<style>
  .promo-section {
    display: flex;
    align-items: center;
    padding: 60px 5%;
    background-size: cover;
    background-position: center;
    position: relative;
    z-index: 20;
    margin-top: -100px;
  }
  .promo-left {
    flex: 1;
    color: #fff;
  }
  .promo-title {
    font-family: "SaaSeriesEDOT";
    font-weight: 400;
    font-size: 32px;
    margin-bottom: 30px;
    color: #fff;
  }
  .features-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
  }
  .feature-item {
    max-width: 450px;
  }
  .feature-icon img {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }
  .feature-text {
    margin-top: 20px;
    font-family: "IBM Plex Mono", monospace;
    font-weight: 400;
    font-size: 20px;
    line-height: 22px;
    text-transform: uppercase;
  }
  .promo-right {
    flex: 1;
    display: flex;
    justify-content: center;
  }
  .promo-right img {
    margin-top: -120px;
  }
  @media (max-width: 768px) {
    .promo-section {
      flex-direction: column;
      text-align: center;
    }
    .features-list {
      align-items: center;
    }
  }
</style>

<section
  class="promo-section {% if section.settings.enable_boxed_section %}boxed-section{% endif %}"
  style="background-image: url('{{ section.settings.bg_image | img_url: 'master' }}');"
>
  <div class="promo-left">
    <h2 class="promo-title">{{ section.settings.headline }}</h2>
    <div class="features-list">
      {% for block in section.blocks %}
        <div class="feature-item">
          <div class="feature-icon">
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | img_url: 'master' }}" alt="{{ block.settings.title | escape }}">
            {% endif %}
          </div>
          <div class="feature-text">
            {{ block.settings.title }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="promo-right">
    {% if section.settings.right_image %}
      <img src="{{ section.settings.right_image | img_url: 'master' }}" alt="{{ section.settings.headline | escape }}">
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Two Column Promo",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_boxed_section",
      "label": "Enable Boxed Section",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Section Title",
      "default": "Unlock peak health with our small-batch, 100% grass-fed animal supplements."
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Side Image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Box",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "Get 15% Off with Subscribe & Save!"
        }
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [
    {
      "name": "Two Column Promo",
      "category": "Custom Sections",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "Get 15% Off with Subscribe & Save!"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Free shipping on all U.S. orders above $100"
          }
        }
      ]
    }
  ]
}
{% endschema %}
