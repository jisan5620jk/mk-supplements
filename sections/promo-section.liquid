<style>
.promo-section {
  display: flex;
  align-items: center;
  gap: 40px;
  padding: 60px 5%;
  background-size: cover;
  background-position: center;
}
.promo-left {
  flex: 1;
  color: #fff;
}
.promo-title {
  font-size: 1.8rem;
  font-weight: bold;
  line-height: 1.4;
  margin-bottom: 30px;
  max-width: 500px;
}
.features-list {
  display: flex;
  flex-direction: column;
  gap: 25px;
}
.feature-item {
  display: flex;
  align-items: flex-start;
  gap: 15px;
}
.feature-icon img {
  width: 40px;
  height: 40px;
  object-fit: contain;
}
.feature-text {
  font-size: 0.9rem;
  line-height: 1.4;
}
.promo-right {
  flex: 1;
  display: flex;
  justify-content: center;
}
.promo-right img {
  max-width: 100%;
  height: auto;
}
@media (max-width: 768px) {
  .promo-section {
    flex-direction: column;
    text-align: center;
  }
  .features-list {
    align-items: center;
  }
}
</style>

<section class="promo-section" style="background-image: url('{{ section.settings.bg_image | img_url: 'master' }}');">
  <div class="promo-left">
    <h2 class="promo-title">{{ section.settings.headline }}</h2>
    <div class="features-list">
      {% for block in section.blocks %}
        <div class="feature-item">
          <div class="feature-icon">
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | img_url: 'master' }}" alt="{{ icon.alt }}">
            {% endif %}
          </div>
          <div class="feature-text">
            <strong>{{ block.settings.title }}</strong><br>
            {{ block.settings.description }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="promo-right">
    {% if section.settings.right_image %}
      <img src="{{ section.settings.right_image | img_url: 'master' }}" alt="{{ right_image.alt }}">
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Two Column Promo",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Section Title",
      "default": "Unlock peak health with our small-batch, 100% grass-fed animal supplements."
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Side Image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Box",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "Get 15% Off with Subscribe & Save!"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Feature Description",
          "default": "Free shipping on all U.S. orders above $100"
        }
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [
    {
      "name": "Two Column Promo",
      "category": "Custom Sections",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}
