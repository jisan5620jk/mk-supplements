<style>
  .collections-section {
    background: #000;
    color: #fff;
    padding: 4rem 2rem;
  }

  .collections-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .collections-header h2 {
    font-size: 2rem;
    margin: 0;
  }

  .collections-link {
    color: #fff;
    text-decoration: underline;
    font-weight: 600;
    font-size: 1rem;
  }

  .collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 2rem;
  }

  .collection-card {
    background: #111;
    padding: 1rem;
    border-radius: 8px;
    text-align: center;
    text-decoration: none;
    color: #fff;
    transition: transform 0.3s ease;
  }

  .collection-card img {
    width: 100%;
    border-radius: 6px;
    margin-bottom: 0.5rem;
  }

  .collection-card:hover {
    transform: scale(1.03);
  }

  .collection-card h3 {
    font-size: 1.2rem;
    margin: 0.5rem 0 0;
  }

  .collection-placeholder {
    background: #333;
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 6px;
    font-size: 1rem;
    color: #aaa;
  }
</style>

<section class="supplements-collections {% if section.settings.enable_boxed_section %}boxed-section{% endif %}">
  <div class="supplements-collections-header">
    <h2>{{ section.settings.section_title }}</h2>
    <a href="{{ section.settings.shop_all_link }}" class="collections-link">{{ section.settings.all_product_btn }}</a>
  </div>
  <div class="supplements-collections-grid">
    {% for collection in collections %}
      {% if collection.handle != 'all' %}
        <a href="{{ collection.url }}" class="supplements-collection-card">
          {% capture img_html %}
            {% if collection.image %}
            <img
                src="{{ collection.image | img_url: 'master' }}"
                alt="{{ collection.title | escape }}"
                loading="lazy"
            >
            {% else %}
            {% assign first_product = collection.products | first %}
            {% if first_product and first_product.featured_image %}
                <img
                src="{{ first_product.featured_image | img_url: 'master' }}"
                alt="{{ first_product.title | escape }}"
                loading="lazy"
                >
            {% else %}
                {{ 'image' | placeholder_svg_tag: 'supplements-collection-placeholder' }}
            {% endif %}
            {% endif %}
          {% endcapture %}

          {{ img_html }}
          <h3>{{ collection.title }}</h3>
        </a>
      {% endif %}
    {% endfor %}
  </div>
</section>

<!-- Section: Supplements Collections -->
{% schema %}
{
  "name": "Supplements Collections",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_boxed_section",
      "label": "Enable Boxed Section",
      "default": true
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Shop by Health Goals"
    },
    {
      "type": "url",
      "id": "shop_all_link",
      "label": "Shop All Link",
      "default": "/collections"
    },
    {
      "type": "text",
      "id": "all_product_btn",
      "label": "Write All product button text",
      "default": "SHOP ALL HEALTH GOALS"
    }
  ],
  "presets": [
    {
      "name": "Supplements Collections",
      "category": "Collection"
    }
  ]
}
{% endschema %}
