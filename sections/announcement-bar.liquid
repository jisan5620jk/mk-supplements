      },
      "blocks": [
        {
          "type": "announcement",
          "settings": {
            "block_text": "<p><strong>SUMMER SALE:&nbsp;</strong>Up to 70%</p>"
          }
        },
        {
          "type": "announcement",
          "settings": {
            "block_text": "<p><strong>FREE </strong>Shipping<strong> </strong>On<strong> ALL </strong>Orders!</p>"
          }
        },
        {
          "type": "announcement",
          "settings": {
            "block_text": "<p><strong>30-day</strong> money-back guarantee</p>"
          }
        }
      ]
    }
  ]
}
